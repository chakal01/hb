<script>
  $(document).ready(function(){
    $("a.grouped_elements").fancybox({
      transitionIn: 'none',
      transitionOut: 'none'
    });
  });
</script>
<style type="text/css">
  .div-panel{
    padding-top: 50px;
    text-align: center;
  }
  .div-panel > .title{
    font-weight: bold;
    font-size: 18px;
  }
  .div-panel > .subtitle{
    font-size: 14px;
  }

</style>

<div class="main-content">

  <% @panels.each do |panel| %>

    <div class="div-panel">



      <div class="image">
        <% panel.images.each_with_index do |img, index| %>
          <% csrc = "images/panels/#{panel.folder_name}/#{img.file_normal}" %>
          <a class="grouped_elements <%= index==0 ? '' : 'display-none' %>" rel="group_<%= panel.id%>" href="<%= csrc %>"><img width="500" src="<%= csrc %>" alt="<%= img.name %>"/></a>
        <% end %>
        
      </div>
      <div class="title" ><%= panel.title %></div>
      <div class="subtitle" ><%= panel.subtitle %></div>
    </div>
    <hr>
  <% end %>

</div>