<%= erb :admin_layout %>

<div class="main-content">
  <h2>Galerie</h2>

  <table class="table" id="sortable">
      <thead>
        <tr>
          <th>Vignette</th>
          <th title="Active tes panels pour les rendres visible aux visiteurs.">Actif</th>
          <th>Titre</th>
          <th>Nombre d'images</th>
          <th>Trier</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @panels.each do |panel| %>
          <tr>
          <td>
            <img width="100" src="/images/panels/<%= panel.folder_name %>/<%= panel.images.first.file_normal %>"/>
          </td>
          <td>
            <span id="<%= panel.id%>" class="switch-is-active glyphicon <%= panel.is_active ? 'glyphicon-check' : 'glyphicon-unchecked' %> is-clickable"></span>
          </td>
          <td><%= panel.title %></td>
          <td><%= panel.images.size %></td>
          <td>
            <span class="id display-none"><%= panel.id %></span>
            <span class="glyphicon glyphicon-screenshot is-clickable sortable-handler"></span>
          </td>
          <td>
            <a href="/admin/gallery/<%= panel.id%>" class="btn" title="Editer">
              <span class="glyphicon glyphicon-pencil"></span>
            </a>
            <a href="/admin/gallery/<%= panel.id%>/image" class="btn" title="Gérer les images">
              <span class="glyphicon glyphicon-picture "></span>
            </a>
            <a href="/admin/gallery/<%= panel.id%>/delete" class="btn" title="Supprimer" onclick="return confirm('Es-tu sûr de vouloir supprimer ce panel ?');">
              <span class="glyphicon glyphicon-trash "></span>
            </a>
          </td>
          </tr>        
        <% end %>
      </tbody>
  </table>

  <a class="btn btn-default" href="/admin/gallery/new">Nouveau panel</a>


</div>