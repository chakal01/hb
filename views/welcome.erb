  <div id="carousel" class="carousel slide is-clickable" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <% (0..@images.length-1).each do |i| %>
        <li data-target="#carousel" data-slide-to="<%= i %>" class="<%= i==0 ? 'active': '' %>" ></li>
      <% end %>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <% @images.each_with_index do |image, index| %>
      <div class="item <%= index==0 ? 'active' : '' %>">
        <img class="carouselImg" src="/images/panels/<%= image.panel.folder_name %>/<%= image.file_normal %>" alt="<%= image.name %>" />
        <div class="carousel-caption">
          <%= image.name %>
        </div>
      </div>
      <% end %>
      

    </div>

  </div>

