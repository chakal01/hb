<%= erb :admin_layout %>

<h2>Constantes</h2>

<form method="post" class="form-horizontal">

  <% @constants.each do |constant| %>
  <div class="form-group">
    <label for="<%= constant.key %>" class="col-sm-3 control-label"><%= constant.label %></label>
    <div class="col-sm-9">
      <input type="text" class="form-control col-sm-12" id="<%= constant.key %>" name="<%= constant.key %>" value="<%= constant.value %>" >
      <span id="helpBlock" class="help-block"><%= constant.help %></span>
    </div>
  </div>
  <% end %>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Sauver les changements</button>
    </div>
  </div>

</form>
