<%= erb :admin_layout %>

<h2>Images de <%= @panel.title %></h2>

<%= erb :flash %>

<hr>

<div class="row">
  

  <div class="col-sm-3">
    <label>Nouvelle image</label>
  </div>

  <div class="col-sm-9">


    <form method="post" action='/admin/gallery/<%= params[:id]%>/image/new' class="form-horizontal" enctype="multipart/form-data" >

      <div class="form-group">
        <div class="col-sm-12">
          <input type="text" name="name" class="form-control" id="name" placeholder="Nom">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          <input type="text" name="comment" class="form-control" id="comment" placeholder="Commentaire">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          <input type="file" name="myfile" class="form-control" id="myfile">
        </div>
      </div>

      <input type="hidden" name="panel_id" value="<%=@panel.id%>">
      
      <div class="form-group">
        <div class="col-sm-12">
          <button type="submit" class="btn btn-default">Upload image</button>
        </div>
      </div>

    </form>
  </div>

</div>


<% @panel.images.each do |img| %>
<hr>
<div class="row">

  <div class="col-sm-3">
    <div style="background-image: url('/images/panels/<%= @panel.folder_name%>/<%=img.file_vignette%>');background-size: 150px; background-repeat: no-repeat; height: 150px;"></div>
  </div>

  <div class="col-sm-9">
    <form method="post" action='/admin/gallery/<%= @panel.id%>/image/<%= img.id%>' class="form-horizontal">

      <div class="form-group">
        <div class="col-sm-12">
          <input type="text" name="name" class="form-control" id="name" value="<%= img.name %>" >
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          <input type="text" name="comment" class="form-control" id="comment" value="<%= img.comment %>" >
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          <button class="btn" title="Enregistrer">
            <span class="glyphicon glyphicon-floppy-disk"></span>
          </button>
          <a href="/admin/gallery/<%= @panel.id%>/image/<%= img.id%>/delete" class="btn" title="Supprimer" onclick="return confirm('Es-tu sÃ»r de vouloir supprimer cette image ?');">
            <span class="glyphicon glyphicon-trash "></span>
          </a>
        </div>
      </div>

      <input type="hidden" name="panel_id" value="<%=@panel.id%>">
      
    </form>
  </div>

</div>

  
<% end %>